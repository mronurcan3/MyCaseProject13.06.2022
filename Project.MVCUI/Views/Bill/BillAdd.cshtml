@model BillVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BillAdd</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <header>
        <div class="bg-slate-900 max-w-full h-24">
            <div class="ml-2 flex flex-row pt-4">
                <img class="h-16 w-16" src="~/Images/61177330982724000a19b190.png" />
                <label class="text-3xl ml-1 mt-2 font-mono text-slate-400 ">Invoice Processing Company</label>
            </div>


        </div>
    </header>

    <section>
        @using (Html.BeginForm("BillAdd", "Bill", FormMethod.Post))
        {
            <label for="users">Choose a user:</label>
            <select name="user" id="user">

                @foreach (AppUser item in Model.AppUsers)
                {
<option value="@item.ID">@item.FirstName @item.LastName @item.EMail</option>
                }
                
               
            </select>

            <br />
            

            foreach (Product item in Model.Products)
            {
                <input type="checkbox" id="@item.ID" name="product" value="@item.ID">
                <label>@item.Name</label> <label>@item.Price</label>
                <input type="number" id="@item.Name" name="quantity" min="0"><br>

            }

            <div class="">
                <button class=" mt-4 bg-blue-700 hover:bg-blue-600 text-sky-50 font-bold  py-2 px-4 rounded focus:outline-none focus:shadow-outline" style="height:50px;width:200px">
                    Add Bill
                </button>

            </div>

        }


    </section>
</body>
</html>
